params { 
    definitions {
        fastq_dir {
            default_value = null
            type = "path"
            description = "Path to fastq directory"
            required = true
            allow = ["*"]
        }
        out_dir {  
            default_value = "results"
            type = "path"
            description = "Outputs go here" 
            required = false
            allow = ["*"]
        }
        reference_dir {
            default_value = "/home/exfactor/projects/data/references/genome"
            type = "path"
            description = "Path to a directory containing bwa-indexed reference files"
            required = false
            allow = ["*"]
        }
        known_variants_dir { 
            default_value = "/home/exfactor/projects/data/references/known_variants/hg38"
            type = "path"
            description = "Path to a directory containing vcfs of known variants used to recalibrate base quality scores"
            required = false
            allow = ["*"]
        }
        bwa_cpus {
            default_value = 4
            type = "integer"
            description = "Number of threads to use for alignment"
            required = false
            min = 1
            max = 8 
        }
        fastp_cpus {
            default_value = 4
            type = "integer"
            description = "Number of threads to use for read trimming and QC"
            required = false
            min = 1
            max = 8 
        }
        remove_duplicates {
            type = "flag"
            description = "Remove duplicate reads"
            required = false
        }
        gatk_sequence_dict {
            default_value = null
            type = "path"
            description = "GATK dictionary for Base Sequence Quality Recalibration. If not provided, <genome>.dict will be created from the reference genome."
            required = false
        }
        genome {
            default_value = "hg38"
            type = "string"
            description = "Human genome reference build. Options: hg38, hg19"
            required = false
            allow = ["hg38", "hg19"]
        }    
        help {
            type = "flag" 
            description = "Print this help message and exit."
            required = false
        }
        ascii_art {
            default_value = "assets/banner.txt"
            type = "path"
            description =  "Path to the banner ascii art text file"
            required = false
        }
    }
}



